  "scripts": {
    "build": "hardhat compile",
    "clean": "hardhat clean",
    "coverage": "hardhat coverage",
    "deploy": "hardhat run 'scripts/deploy.js'",
    "deploy-roles": "hardhat run 'scripts/deploy-roles.js'",
    "eslint": "eslint '**/*.js'",
    "eslint-fix": "eslint '**/*.js' --fix",
    "lint": "npm run eslint && npm run prettier && npm run solhint",
    "lint-fix": "npm run eslint-fix && npm run prettier-fix && npm run solhint-fix",
    "lint-json": "npm run prettier-json",
    "lint-json-fix": "npm run prettier-json-fix",
    "node": "NO_TIMETRAVEL=1 hardhat node",
    "prebuild": "npm run lint",
    "prettier": "prettier '**/*.{sol,md}' --check --print-width 120",
    "prettier-fix": "prettier '**/*.{sol,md}' --write --print-width 120",
    "prettier-json": "prettier '**/*.json' --check --print-width 120",
    "prettier-json-fix": "prettier '**/*.json' --write --print-width 120",
    "solhint": "solhint 'contracts/**/*.sol'",
    "solhint-fix": "solhint 'contracts/**/*.sol' --fix",
    "test": "NODE_OPTIONS='--max-old-space-size=4096' hardhat test",
    "test-gas": "REPORT_GAS=true npm test"
  },
  "version": "7.2.0"
