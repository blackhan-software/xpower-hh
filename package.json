  "scripts": {
    "build": "npx hardhat compile",
    "clean": "npx hardhat clean",
    "coverage": "npx hardhat coverage",
    "deploy": "npx hardhat run 'scripts/deploy.js'",
    "eslint": "npx eslint '**/*.js'",
    "eslint-fix": "npx eslint '**/*.js' --fix",
    "lint": "npm run eslint && npm run prettier && npm run solhint",
    "lint-fix": "npm run eslint-fix && npm run prettier-fix && npm run solhint-fix",
    "node": "npx hardhat node",
    "prebuild": "npm run lint",
    "prettier": "npx prettier '**/*.{json,sol,md}' --check --print-width 120",
    "prettier-fix": "npx prettier '**/*.{json,sol,md}' --write --print-width 120",
    "solhint": "npx solhint 'contracts/**/*.sol'",
    "solhint-fix": "npx solhint 'contracts/**/*.sol' --fix",
    "test": "npx hardhat test",
    "test-gas": "REPORT_GAS=true npx hardhat test"
