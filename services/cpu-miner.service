[Unit]
Description=XPower CPU miner
StartLimitIntervalSec=0
After=network.target

[Service]
WorkingDirectory=/opt/xpower-hh
EnvironmentFile=/opt/xpower-hh/.env
ExecStart=npx hardhat mine --network mainnet --token cpu --level %i
Restart=on-failure
RestartSec=60
Nice=10

[Install]
WantedBy=default.target
